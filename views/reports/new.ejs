<% include ../partials/header %>

  <form action="/reports" method="POST" class="form-group">
    <div class="row">
        <div class="col">
            <label for="address">Address</label>
            <input type="text" name="address" placeholder="Address" class="form-control">
        </div>
        <div class="col">
            <label for="lastName">Type of incident</label>
            <input type="text" name="type" placeholder="Type of incident" class="form-control">
        </div>
    </div>
    <div class="row mt-2">
        <div class="col">
            <label for="organization">Description</label>
            <textarea name="description" columns="20" class="form-control"></textarea>
        </div>
    </div>
    <button type="submit" class="btn btn-primary mt-3">Submit Report</button>
  </form>

<% include ../partials/footer %>